extends layout

block content
  #app
    header
      .container  
        .hero.is-info.is-bold
          .hero-body
            h1.is-size-1 Just Products
      section.section
        .container
          div
            table.table.is-fullwidth.is-striped
              thead
                tr 
                  th Name
                  th Brand
                  th Price
                  th.has-text-centered Stock Units
              tbody
                each product in products
                  tr
                    td=product.name
                    td=product.brand.name
                    td=product.price
                    td.has-text-centered=product.stockUnits

